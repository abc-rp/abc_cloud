apiVersion: integreatly.org/v1alpha1
kind: Grafana
metadata:
  name: {{ grafana_namespace }}.{{ grafana_route_suffix }}
spec:
  ingress:
    enabled: True
    hostname: {{ grafana_namespace }}.{{ grafana_route_suffix }}
  config:
    log:
      mode: "console"
      level: "warn"
    security:
      admin_user: "root"
      admin_password: "secret"
    auth:
      disable_login_form: False
      disable_signout_menu: True
    auth.anonymous:
      enabled: True
{% if cluster_type == "gke" %}
  service:
    type: NodePort
{% endif %}
  dashboardLabelSelector:
    - matchExpressions:
        - {key: app, operator: In, values: [grafana]}
