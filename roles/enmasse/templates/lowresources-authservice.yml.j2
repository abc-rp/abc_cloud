apiVersion: admin.enmasse.io/v1beta1
kind: AuthenticationService
metadata:
  name: standard-authservice
spec:
  type: standard
  standard:
    # storage:
    #   type: persistent-claim
    #   size: 1Gi
    jvmOptions: -Xms1024M -Xmx1024M -XX:MetaspaceSize=512M -XX:MaxMetaspaceSize=1024M
    # jvmOptions: -Xms64m -Xmx512m -XX:MetaspaceSize=96M -XX:MaxMetaspaceSize=256m
    resources:
      requests:
        memory: 1024Mi
      limits:
        memory: 1024Mi